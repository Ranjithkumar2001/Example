#include <stdio.h>
 
int main() {
    int encoded[] = {3, 2, 5, 1, 4, 6, 2}; 
    int size = 7;
    int decoded[100];
    int decodedSize = 0;
    int ct = 0;
    
    for(int i = 0 ; i < 7; i = i+2){
        int pt = i+1 > size-1 ? 0 : i+1;
        printf("%d\n",pt);
        printf("%d\n",encoded[pt]);
        
        for (int j=1;j<=encoded[i];j++){
            decoded[ct++] = encoded[pt];
        }

    }
    
    	for(int i=0; i<ct; i++ ) {
		printf("%d\t",decoded[i]);
	}
 
   
 
    return 0;
}
